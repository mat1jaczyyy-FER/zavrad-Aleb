<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <RuntimeHostConfigurationOption Include="System.Globalization.Invariant" Value="true" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Aleb.Client\Aleb.Client.csproj" />
    <ProjectReference Include="..\Aleb.Common\Aleb.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.9.999-cibuild*" />
    <PackageReference Include="Avalonia.Desktop" Version="0.9.999-cibuild*" />
    <PackageReference Include="Avalonia.Diagnostics" Version="0.9.999-cibuild*" />
    <PackageReference Include="DiscordRichPresence" Version="1.0.150">
      <NoWarn>NU1701</NoWarn>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="**/*.cs">
      <DependentUpon>%(Filename).xaml</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**/*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Resources/*" />
  </ItemGroup>
  
</Project>
