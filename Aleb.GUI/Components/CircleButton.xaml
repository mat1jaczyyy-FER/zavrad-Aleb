<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Aleb.GUI.Components.CircleButton"
             DetachedFromVisualTree="Unloaded">

  <Canvas HorizontalAlignment="Center" Width="50" Height="50" x:Name="Icon">
    <Ellipse Width="50" Height="50" Stroke="{DynamicResource ThemeBorderMidBrush}" StrokeThickness="1.5" x:Name="Ellipse"
             PointerEnter="MouseEnter" PointerLeave="MouseLeave" PointerPressed="MouseDown" PointerReleased="MouseUp" />
  </Canvas>
</UserControl>