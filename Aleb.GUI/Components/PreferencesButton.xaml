    <Ellipse Fill="{DynamicResource ThemeBorderMidBrush}" Canvas.Left="5" Canvas.Top="5" Width="6" Height="6" />

    <Path Fill="{DynamicResource Brush}"
          Data="M 12.6,5.5 L 16,6 16,10 12.6,10.5 Z" />
    <Path Fill="{DynamicResource Brush}"
          Data="M 12.5,10.75 L 13.7,13.95 10.3,15.9 8.15,13.3 Z" />
    <Path Fill="{DynamicResource Brush}"
          Data="M 7.85,13.3 L 5.7,15.9 2.3,13.95 3.5,10.75 Z" />
    <Path Fill="{DynamicResource Brush}"
          Data="M 3.4,5.5 L 0,6 0,10 3.4,10.5 Z" />
