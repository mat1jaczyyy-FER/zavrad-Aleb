<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Aleb.GUI.Components.TrumpButton"
             Cursor="Hand"
             DetachedFromVisualTree="Unloaded">

  <Grid HorizontalAlignment="Center" Background="Transparent" x:Name="Icon"
        PointerEnter="MouseEnter" PointerLeave="MouseLeave" PointerPressed="MouseDown" PointerReleased="MouseUp">
    <Image x:Name="Image" />
  </Grid>
</UserControl>