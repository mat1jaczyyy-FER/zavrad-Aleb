<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Aleb.GUI.Prompts.BelaPrompt"
             xmlns:Components="clr-namespace:Aleb.GUI.Components"
             AttachedToVisualTree="Loaded" DetachedFromVisualTree="Unloaded">

  <Grid RowDefinitions="*,*">
    <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Želite li zvati Belu?" />

    <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Spacing="10">
      <Button Content="Dalje" x:Name="SkipButton" Click="Skip" />
      <Button Content="Zovi" x:Name="CallButton" Click="Call" />
    </StackPanel>
  </Grid>
</UserControl>