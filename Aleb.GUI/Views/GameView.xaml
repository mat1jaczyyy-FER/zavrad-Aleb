<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Aleb.GUI.Views.GameView"
             xmlns:Components="clr-namespace:Aleb.GUI.Components"
             AttachedToVisualTree="Loaded" DetachedFromVisualTree="Unloaded">

  <DockPanel x:Name="Root">
    <Components:UserInRoom DockPanel.Dock="Bottom" HorizontalAlignment="Center" />
    <Components:UserInRoom DockPanel.Dock="Top" HorizontalAlignment="Center" />
    <Components:UserInRoom DockPanel.Dock="Right" VerticalAlignment="Center" />
    <Components:UserInRoom DockPanel.Dock="Left" VerticalAlignment="Center" />

    <Grid Margin="15" RowDefinitions="2*,10,*">
      <Grid RowDefinitions="*,4*,*" ColumnDefinitions="*,2*,*">
        <Border Grid.Row="1" Grid.Column="1" Background="{DynamicResource ThemeControlHighBrush}" IsVisible="False" x:Name="Prompt" />
      </Grid>
      
      <Border Grid.Row="2" BorderBrush="{DynamicResource ThemeForegroundLowBrush}" BorderThickness="2" CornerRadius="5" HorizontalAlignment="Center">
        <StackPanel Margin="5" Orientation="Horizontal" Spacing="5" x:Name="Cards" />
      </Border>
    </Grid>
  </DockPanel>
</UserControl>