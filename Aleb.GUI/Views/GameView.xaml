<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Aleb.GUI.Views.GameView"
             xmlns:Components="clr-namespace:Aleb.GUI.Components"
             AttachedToVisualTree="Loaded" DetachedFromVisualTree="Unloaded">

  <DockPanel x:Name="Root">
    <Components:UserInRoom DockPanel.Dock="Bottom" />
    <Components:UserInRoom DockPanel.Dock="Top" />
    <Components:UserInRoom DockPanel.Dock="Right" />
    <Components:UserInRoom DockPanel.Dock="Left" />

    <DockPanel DockPanel.Dock="Bottom" Margin="15">
      <Border DockPanel.Dock="Bottom" BorderBrush="{DynamicResource ThemeForegroundLowBrush}" BorderThickness="2" CornerRadius="5">
        <StackPanel Orientation="Horizontal" Spacing="5" x:Name="Cards" />
      </Border>
    </DockPanel>
  </DockPanel>
</UserControl>